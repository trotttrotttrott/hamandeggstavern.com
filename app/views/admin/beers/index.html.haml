%h1
  %span beers <small>#{@beers.size}</small>
  = link_to 'New', new_admin_beer_path, :class => 'btn btn-primary btn-mini'

%table.table
  %tr
    %th Name
    %th Description
    %th Is Shit Can
    %th Is Craft Can
    %th Is Draft
    %th Percentage of Alcohol
    %th Rank
    %th
    %th
    %th
  - @beers.each do |beer|
    %tr
      %td= beer.name
      %td= beer.description
      %td= beer.is_shit_can
      %td= beer.is_craft_can
      %td= beer.is_draft
      %td= beer.percentage_of_alcohol
      %td= beer.rank
      %td= link_to 'Show', admin_beer_path(beer)
      %td= link_to 'Edit', edit_admin_beer_path(beer)
      %td= link_to 'Destroy', admin_beer_path(beer), confirm: 'Are you sure?', method: :delete
