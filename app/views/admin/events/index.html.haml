%h1
  %span events
  = link_to 'New', new_admin_event_path, :class => 'btn btn-primary btn-mini'

%table.table
  %tr
    %th Name
    %th Date
    %th Price
    %th Words
    %th Poster
    %th
    %th
    %th

  - @events.each do |event|
    %tr{ :class => ('muted' if event.past?) }
      %td= event.name
      %td= event.date_formatted
      %td= event.price
      %td= event.words
      %td
        - if event.poster.url
          %a{ href: event.poster.url, target: '_blank' }
            = image_tag event.poster.thumb.url
      %td= link_to 'Show', admin_event_path(event)
      %td= link_to 'Edit', edit_admin_event_path(event)
      %td= link_to 'Destroy', admin_event_path(event), :method => :delete, :data => { :confirm => 'Are you sure?' }
