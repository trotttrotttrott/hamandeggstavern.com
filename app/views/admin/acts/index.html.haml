%h1
  %span acts
  = link_to 'New', new_admin_act_path, :class => 'btn btn-primary btn-mini'
  %small.muted= page_entries_info @acts

= paginate @acts

%table.table
  %tr
    %th Name
    %th URL
    %th Description
    %th
    %th
    %th

  - @acts.each do |act|
    %tr
      %td= act.name
      %td= act.url
      %td= act.description
      %td= link_to 'Show', admin_act_path(act)
      %td= link_to 'Edit', edit_admin_act_path(act)
      %td= link_to 'Destroy', admin_act_path(act), :method => :delete, :data => { :confirm => 'Are you sure?' }

= paginate @acts
